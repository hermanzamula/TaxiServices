<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="taxiservice" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.taxiservice.model.entity.City</class>
        <class>com.taxiservice.model.entity.Country</class>
        <class>com.taxiservice.model.entity.DriveType</class>
        <class>com.taxiservice.model.entity.PhoneNumber</class>
        <class>com.taxiservice.model.entity.TaxiDriver</class>
        <class>com.taxiservice.model.entity.User</class>
        <class>com.taxiservice.model.entity.UserBonus</class>
        <class>com.taxiservice.model.entity.TaxiDriverHasDriveType</class>
        <class>com.taxiservice.model.entity.Favorite</class>
        <class>com.taxiservice.model.entity.UserPlace</class>
        <class>com.taxiservice.model.entity.Price</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.search.default.directory_provider" value="ram"/>
            <property name="hibernate.search.enable_dirty_check" value="false"/>
            <property name="hibernate.connection.url"
                      value="jdbc:mysql://localhost:3306/taxiservice?autoReconnect=true"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="herakliz"/>
        </properties>
    </persistence-unit>
</persistence>

